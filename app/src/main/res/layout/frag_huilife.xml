<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defult_color_white"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_huil_ife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <RadioButton
                android:id="@+id/rb_support"
                style="@style/rb_huilife_style"
                android:layout_marginRight="18dp"
                android:checked="true"
                android:text="直供" />

            <RadioButton
                android:id="@+id/rb_chips"
                style="@style/rb_huilife_style"
                android:layout_marginLeft="18dp"
                android:checked="false"
                android:text="众筹" />
              <RadioButton
                android:id="@+id/rb_shops"
                style="@style/rb_huilife_style"
                android:layout_marginLeft="18dp"
                android:checked="false"
                android:text="商家联盟" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_huiLife"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:background="@color/defult_color_white">
        
    </FrameLayout>
</LinearLayout>
