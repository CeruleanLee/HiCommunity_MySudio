<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_cate_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"

        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/category_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/img_supply_category" />

        <TextView
            android:id="@+id/item_category_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/category_tag"
            android:text="新鲜水果"
            android:textColor="@color/Defult_Color_AppGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_category_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"

            android:paddingRight="12dp"
            android:paddingTop="2dp"
            android:text="更多>>"
            android:textColor="#666666"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/position_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"

        android:background="@color/Defult_Color_LineGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_category_bigpic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/bottom_layout_big"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/category_big_goodsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="美国红提"
                        android:textColor="#666666"

                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category_big_goodsTitle"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/category_big_nowPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="￥：29.5"
                            android:textColor="@color/red" />

                        <ImageView
                            android:id="@+id/category_big_shopcart"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/img_supply_cart_big" />
                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_above="@id/bottom_layout_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/category_big_goodsimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/default_no_pic"
                       />
                    <TextView
                        android:id="@+id/category_big_tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tv_red_shape"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:text="热卖"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>




            </RelativeLayout>


        </RelativeLayout>


        <View
            android:layout_width="0.25dip"
            android:layout_height="match_parent"
            android:background="@color/Defult_Color_LineGrey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_category_smallpic1"
                android:layout_width="match_parent"
                android:layout_height="130dp"

>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:padding="7dp"
>

                        <ImageView
                            android:id="@+id/category_small_goodsimg_goodsimg"
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/default_no_pic"
                           />

                        <TextView
                            android:id="@+id/category_small_goodsimg_tv_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_tv_red_shape"
                            android:paddingBottom="1dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="1dp"
                            android:text="热卖"
                            android:textColor="@color/white"
                            android:textSize="11sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp">

                        <TextView
                            android:id="@+id/category_small_goodsimg_goodsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="美国红提"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/category_small_goodsimg_goodsTitle"
                            android:layout_marginBottom="5dp"

                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/category_small_goodsimg_nowPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="￥：29.5"
                                android:textColor="@color/red"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/category_small_goodsimg_shopcart"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="5dp"
                            android:paddingBottom="5dp"
                            android:src="@mipmap/img_supply_cart_small" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dip"
                android:background="@color/Defult_Color_LineGrey" />

            <RelativeLayout
                android:id="@+id/item_category_smallpic2"
                android:layout_width="match_parent"
                android:layout_height="130dp"

>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:padding="7dp"
>

                        <ImageView
                            android:id="@+id/category_small_goodsimg_goodsimg2"
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                    android:scaleType="fitXY"
                            android:src="@mipmap/default_no_pic"
                          />

                        <TextView
                            android:id="@+id/category_small_goodsimg_tv_tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_tv_red_shape"
                            android:paddingBottom="1dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="1dp"
                            android:text="热卖"
                            android:textColor="@color/white"
                            android:textSize="11sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp">

                        <TextView
                            android:id="@+id/category_small_goodsimg_goodsTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="美国红提"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/category_small_goodsimg_goodsTitle2"
                            android:layout_marginBottom="5dp"

                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/category_small_goodsimg_nowPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="￥：29.5"
                                android:textColor="@color/red"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/category_small_goodsimg_shopcart2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="5dp"
                            android:paddingBottom="5dp"
                            android:src="@mipmap/img_supply_cart_small" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
