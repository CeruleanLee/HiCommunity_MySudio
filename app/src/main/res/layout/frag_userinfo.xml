<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="216dip"
                android:background="@drawable/bg_leftmenu_grandient"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginTop="@dimen/title_status_hight"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_UserInfo_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:padding="@dimen/padding_8"
                        android:src="@mipmap/img_back_nomal" />

                    <TextView
                        android:id="@+id/tv_UserInfo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="个人资料"
                        android:textColor="@color/defult_color_white"
                        android:textSize="@dimen/font_extra_large"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_UserInfo_RightnMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_15"
                        android:text="编辑"
                        android:textColor="@color/defult_color_white"
                        android:textSize="@dimen/font_large"
                        android:visibility="visible" />
                </RelativeLayout>

                <com.don.view.CircleImageView
                    android:id="@+id/civ_UserInfo_Avatar"
                    style="@style/civ_avatar_type_Size77"
                    android:layout_marginTop="30dip" />
            </LinearLayout>

            <include
                android:id="@+id/progress_UserInfo"
                layout="@layout/progress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:background="@color/defult_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dip"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_UserInfo_NickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dip"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄:"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_UserInfo_UserAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dip"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_UserInfo_UserSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:layout_marginTop="6dip"
                android:background="@color/defult_color_white"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingBottom="20dip"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人签名:"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/tv_UserInfo_UserIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_UserInfo_AuthZiliao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dip"
                android:paddingLeft="@dimen/padding_15"
                android:paddingTop="20dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证资料:"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:textColor="@color/color_UserInfoTextColor"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>