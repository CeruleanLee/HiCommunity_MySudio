<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/motiondetail_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/motiondetail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="aaa"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/motiondetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vcd"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/motiondetail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"

                android:text="afsdf"
                android:textSize="12dp" />


        </LinearLayout>
        <TextView
            android:id="@+id/motiondetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/motiondetail_layout0"
            android:text="2016.03.3"
            android:textSize="10sp"
            android:layout_alignParentRight="true"

            />
        <LinearLayout
            android:layout_below="@id/motiondetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"

            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/motiondetail_vote_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="10sp"
                android:text="支持率：1.2%"/>
            <CheckedTextView
                android:id="@+id/item_aotumotion_but_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_aotumotion_time"
                android:layout_marginBottom="@dimen/margin_12"
                android:background="@drawable/bg_selector_but_coner_green"

                android:text=" 支持 "
                android:textColor="@color/white"
                android:textSize="10sp"

                />
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/auto_motiondetails_Progress"
        layout="@layout/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defult_color_white" />

    <TextView
        android:id="@+id/auto_motiondetails_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defult_color_white"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/Service_title_text_color"
        android:textSize="15dp"
        android:visibility="gone" />
</RelativeLayout>