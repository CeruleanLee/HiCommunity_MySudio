<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/motiondetail_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/motiondetail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/motiondetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/motiondetail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.5"
                android:text=""
                android:textSize="16dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/motiondetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/motiondetail_layout0"
            android:text=""
            android:textSize="15sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/motiondetail_time"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"

            android:paddingLeft="3dp"

            android:paddingRight="3dp">

            <TextView
                android:id="@+id/motiondetail_vote_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="15sp" />

            <CheckedTextView
                android:id="@+id/item_aotumotion_but_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_12"
                android:background="@drawable/bg_coner_button_selector"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="  支持  "
                android:textColor="@color/white"
                android:textSize="15sp"

                />
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/auto_motiondetails_Progress"
        layout="@layout/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defult_color_white" />

    <TextView
        android:id="@+id/auto_motiondetails_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defult_color_white"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/Service_title_text_color"
        android:textSize="15dp"
        android:visibility="gone" />
</RelativeLayout>