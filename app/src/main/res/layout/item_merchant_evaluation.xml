<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <com.don.view.CircleImageView
            android:id="@+id/item_evaluation_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/evaluation_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="@+id/item_evaluation_iv"
            android:layout_alignTop="@+id/item_evaluation_iv"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_evaluation_iv" >

            <TextView
                android:id="@+id/item_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                 android:layout_alignParentTop="true"
                android:textColor="@color/item_shopdeatil_commentdetail_title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_evalutaion_merchantname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_username_tv"
                android:textColor="#5F605E"
                android:text="" />
            <TextView
                android:id="@+id/item_evalution_content_tv"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_evalutaion_merchantname_tv"
                android:layout_height="wrap_content"
                android:textColor="#5F605E"
                android:text="" />
            <TextView
                android:id="@+id/item_evaluation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="#5F605E"
                android:text="" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/item_evaluation_iv2"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:visibility="invisible"
         />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_evaluation_iv2"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_evaluation_iv2" >



        </RelativeLayout>
    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        
        />

    <cn.hi028.android.highcommunity.view.CustomGridView
        android:id="@+id/item_evaluation_gridview"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:listSelector="@null"
        android:numColumns="4"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:scrollbars="none"
        android:verticalSpacing="5dp" >
    </cn.hi028.android.highcommunity.view.CustomGridView>

</LinearLayout>