<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_third_service_selector"
    android:paddingLeft="@dimen/margin_8"
    android:paddingRight="@dimen/margin_8"
    android:paddingTop="@dimen/margin_12">
    <TextView
        android:id="@+id/item_autoVotelist_isJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_coner_button_selector"
        android:clickable="false"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="  已参与  "
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/item_autoVotelist_Vtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="content"
        android:layout_below="@id/item_autoVotelist_isJoin"
        android:textSize="16sp"
android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/item_autoVotelist_Vtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_autoVotelist_Vtitle"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="12dp"
        android:text="2016/10/11"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_autoVotelist_Vbuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_autoVotelist_Vtitle"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="12dp"

        android:text="适用于：所有楼栋"
        android:textColor="@color/Defult_Color_Grey"
        android:textSize="10sp" />


</RelativeLayout>