<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/bg_third_service_selector"
    android:orientation="vertical"
    android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_nearby_shops_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/item_nearby_shops_image"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/item_nearby_shops_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="野生尖螺店"
                    android:textColor="@color/black2"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_nearby_shops_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="电话：188888888"
                    android:textColor="#5F605E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_nearby_shops_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="地址：成都市金开区琥珀庭院99号"
                    android:textColor="#5F605E"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评分："
                        android:textColor="@color/black2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_nearby_shops_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99起"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


</LinearLayout>