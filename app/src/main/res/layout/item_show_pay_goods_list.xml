<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/item_show_pay_goods_list_head_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:background="@drawable/shop_detail_ac_head_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_show_pay_goods_list_head_iv" >

        <TextView
            android:id="@+id/item_show_pay_goods_list_good_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谷粒多稻米"
            android:textColor="@color/black2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_show_pay_goods_list_good_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_show_pay_goods_list_good_name_tv"
            android:layout_marginTop="5dp"
            android:text="¥99元"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_show_pay_goods_list_good_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_show_pay_goods_list_good_price_tv"
            android:layout_marginTop="5dp"
            android:text="小计：198"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_show_pay_goods_list_good_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:text="x2"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>