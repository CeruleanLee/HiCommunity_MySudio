<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_color_white" >

    <FrameLayout
        android:id="@+id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/defult_color_white" >

        <cn.hi028.android.highcommunity.view.PagerListView
            android:id="@+id/clv_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:background="@color/defult_color_white"
            android:cacheColorHint="#00000000"
            android:divider="@color/Defult_Color_LineGrey"
            android:dividerHeight="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:listSelector="#00000000" >
        </cn.hi028.android.highcommunity.view.PagerListView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/defult_color_white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Defult_Color_LineGrey" >
            </View>

            <cn.hi028.android.highcommunity.view.RevealLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#545BDD"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="14dp"
                        android:text="加入购物订单"
                        android:textColor="@color/defult_color_white"
                        android:textSize="@dimen/font_extra_small_half" />

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FEA52A"
                        android:paddingBottom="14dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="14dp"
                        android:text="立即购买"
                        android:textColor="@color/defult_color_white"
                        android:textSize="@dimen/font_extra_small_half" />
                </LinearLayout>
            </cn.hi028.android.highcommunity.view.RevealLayout>
        </FrameLayout>
    </FrameLayout>
    <cn.hi028.android.highcommunity.view.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</RelativeLayout>