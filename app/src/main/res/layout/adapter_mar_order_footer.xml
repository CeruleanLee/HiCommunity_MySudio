<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defult_color_white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="right">
    <TextView
        android:id="@+id/tv_goods_total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="共5件商品"
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="8dp"
        android:textColor="@color/Defult_Color_MidGrey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_goods_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="￥462.00"
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="12dp"
        android:textColor="@color/color_deep_red"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_goods_realpay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="12dp"
        android:textColor="@color/Defult_Color_MidGrey"
        android:textSize="12sp" />
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/Defult_Color_ShallowHalfGrey"></View>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/tv_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="订单号：D5231456521"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="@dimen/font_extra_small_half" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_operate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_corner_bg"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:minWidth="60dp"
                android:text="取消订单"
                android:textColor="@color/Defult_Color_AppGreen"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_operate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_corner_bg"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:minWidth="60dp"
                android:text="付款"
                android:textColor="@color/Defult_Color_AppGreen"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Defult_Color_ShallowGrey"></View>
</LinearLayout>