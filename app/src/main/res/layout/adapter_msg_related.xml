<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_system_msg_item"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="12dp">

    <com.don.view.CircleImageView
        android:id="@+id/civl_communityItem_avatar"
        style="@style/civ_avatar_type2"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/civl_communityItem_avatar"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_communityItem_name"
                    style="@style/tv_community_name"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_communityItem_time"
                    style="@style/tv_community_time"
                    android:text="--"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_community_state"
                style="@style/tv_community_time"
                android:layout_gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/color_deep_red"
                android:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_communityItem_content"
            style="@style/tv_community_content"
            android:paddingTop="4dp"
            android:textColor="@color/Defult_Color_MidGrey"
            android:textSize="14sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">




    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_only_corners"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_community_pic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="2"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:text=" "
            android:textColor="@color/Service_title_text_color"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </LinearLayout>
</LinearLayout>