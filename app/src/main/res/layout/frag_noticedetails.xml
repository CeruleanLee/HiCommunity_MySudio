<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_12">

    <include
        android:id="@+id/ll_NoticeDetails_Progress"
        layout="@layout/progress" />

    <TextView
        android:id="@+id/tv_NoticeDetails_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无数据"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_NoticeDetails_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:text="停水通知"
        android:textColor="@color/defult_text_color"
        android:textSize="@dimen/font_extra_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_NoticeDetails_PublishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_4"
            android:text="发布时间:2015年12月21日"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="@dimen/font_extra_small" />

        <TextView
            android:id="@+id/tv_NoticeDetails_PublishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_8"
            android:text="发布人:李丽"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="@dimen/font_extra_small" />
    </LinearLayout>

    <net.duohuo.dhroid.view.AutoScrollViewPager
        android:id="@+id/iv_NoticeDetails_Picture"
        android:layout_width="match_parent"
        android:layout_height="185dip"
        android:layout_marginBottom="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_15"
        android:background="@android:color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_NoticeDetails_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈喽打开解放"
        android:textSize="@dimen/font_small" />

</LinearLayout>
