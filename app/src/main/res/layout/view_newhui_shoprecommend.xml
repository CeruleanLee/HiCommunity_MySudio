<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/ptrgv_shoprecommend_piclistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"></com.handmark.pulltorefresh.library.PullToRefreshGridView>
    <cn.hi028.android.highcommunity.view.nine.MyNineGridView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shoprecommend_piclistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:horizontalSpacing="4dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp"
        app:sapcing="4dp" />
</LinearLayout>
