<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@mipmap/default_no_pic"
    android:id="@+id/category_big_goodsimg"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热卖"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textSize="12sp"
        android:background="@drawable/bg_tv_red_shape"
        android:id="@+id/category_big_tv_tag"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美国红提"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="#666666"
        android:layout_below="@id/category_big_goodsimg"
        android:id="@+id/category_big_goodsTitle"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/category_big_goodsTitle"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/category_big_nowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥：29.5"
            android:layout_centerVertical="true"
            android:textColor="@color/red" />
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:src="@mipmap/img_supply_cart_big"
    android:id="@+id/category_big_shopcart"/>
    </RelativeLayout>

</RelativeLayout>
