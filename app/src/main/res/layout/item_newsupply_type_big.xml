<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/category_big_goodsimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/default_no_pic" />

    <TextView
        android:id="@+id/category_big_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tv_red_shape"
        android:paddingBottom="1dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:text="热卖"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/category_big_goodsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_big_goodsimg"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="美国红提"
        android:textColor="#666666"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_big_goodsTitle"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/category_big_nowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="￥：29.5"
            android:textColor="@color/red" />

        <ImageView
            android:id="@+id/category_big_shopcart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_supply_cart_big" />
    </RelativeLayout>

</RelativeLayout>
