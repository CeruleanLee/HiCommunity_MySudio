<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defult_color_white"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_walletSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <RadioButton
                android:id="@+id/rb_walletSwitch_Left"
                style="@style/rb_walletSwitch_style"
                android:layout_marginRight="18dp"
                android:checked="true"
                android:text="积分" />

            <RadioButton
                android:id="@+id/rb_walletSwitch_Right"
                style="@style/rb_walletSwitch_style"
                android:layout_marginLeft="18dp"
                android:checked="false"
                android:text="优惠券" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/Defult_Color_ShallowHalfGrey" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_walletSwitch_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_weight="1" />

</LinearLayout>
