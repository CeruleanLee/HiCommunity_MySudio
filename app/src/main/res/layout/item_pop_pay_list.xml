<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/item_pop_shop_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/black2" 
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_pop_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black2"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_pop_sub_or_add_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_pop_sub_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_merchant_goods_list_right_sub_iv" />

        <TextView
            android:id="@+id/item_pop_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_pop_add_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_merchant_goods_list_right_add_iv" />
    </LinearLayout>
	
</LinearLayout>