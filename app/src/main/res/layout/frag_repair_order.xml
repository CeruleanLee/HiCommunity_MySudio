<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginBottom="40dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/defult_color_white"
        android:layout_marginTop="@dimen/margin_12"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingLeft="@dimen/padding_12"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/defult_color_white"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textSize="@dimen/font_small"
                android:textColor="@color/Defult_Color_MidGrey" />
            <EditText
                android:id="@+id/edt_repair_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/defult_color_white"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/padding_12"
                android:text="赵海"
                android:paddingRight="@dimen/padding_12"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_small"
                android:textColor="@color/Defult_Color_MidGrey" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/Defult_Color_LineGrey"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingLeft="@dimen/padding_12"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/defult_color_white"
                android:gravity="center_vertical"
                android:text="电话"
                android:textSize="@dimen/font_small"
                android:textColor="@color/Defult_Color_MidGrey" />
            <EditText
                android:id="@+id/edt_repair_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/defult_color_white"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/padding_12"
                android:text="18780209794"
                android:paddingRight="@dimen/padding_12"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/font_small"
                android:textColor="@color/Defult_Color_MidGrey" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/defult_color_white"
            android:layout_marginTop="@dimen/margin_12"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:paddingLeft="@dimen/padding_12"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/defult_color_white"
                    android:gravity="center_vertical"
                    android:text="详细地址"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/Defult_Color_MidGrey" />
                <TextView
                    android:id="@+id/tv_repair_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/defult_color_white"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/padding_12"
                    android:text="高新区两江国际1栋1301"
                    android:paddingRight="@dimen/padding_12"
                    android:singleLine="true"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/Defult_Color_MidGrey" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Defult_Color_LineGrey"></View>
            <LinearLayout
                android:id="@+id/ll_repair_time"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:paddingLeft="@dimen/padding_12"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/defult_color_white"
                    android:gravity="center_vertical"
                    android:text="预约时间"
                    android:clickable="false"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/Defult_Color_MidGrey" />
                <TextView
                    android:id="@+id/tv_repair_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/defult_color_white"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/padding_12"
                    android:hint="选择时间"
                    android:clickable="false"
                    android:paddingRight="@dimen/padding_12"
                    android:singleLine="true"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/Defult_Color_MidGrey" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/defult_color_white"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_12"
        android:paddingBottom="@dimen/padding_12"
        >
        <EditText
            android:id="@+id/edt_repair_content"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@color/defult_color_white"
            android:gravity="top|left"
            android:hint="请描述保修问题"
            android:padding="@dimen/padding_12"
            android:textSize="@dimen/font_small"
            android:textColorHint="@color/Defult_Color_Grey"
            android:textColor="@color/Defult_Color_MidGrey" />
        <net.duohuo.dhroid.view.CustomGridView
            android:id="@+id/cg_add_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dip"
            android:cacheColorHint="#00000000"
            android:listSelector="@drawable/ll_leftmenu_bg_selector"
            android:numColumns="4"
            android:paddingLeft="@dimen/padding_8"
            android:paddingRight="@dimen/padding_8"
            android:scrollbars="none"
            android:smoothScrollbar="true"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="@dimen/padding_4"
            android:verticalSpacing="@dimen/padding_4" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <TextView
        android:id="@+id/tv_order"
        style="@style/bt_appdefult_tyle"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/padding_36"
        android:clickable="true"
        android:text="预约"
        android:textSize="@dimen/font_small" />
</FrameLayout>
