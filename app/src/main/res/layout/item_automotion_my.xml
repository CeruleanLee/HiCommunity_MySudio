<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_aotumotion_HScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/item_aotumotion_contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_third_service_selector"
          >
            <TextView
                android:id="@+id/item_aotumotion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/item_aotumotion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_aotumotion_title"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:text="2016/10/11"
                android:textColor="@color/Defult_Color_Grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_aotumotion_tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_aotumotion_time"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginTop="6dp"
                android:text="支持率："
                android:textColor="@color/Defult_Color_Grey"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />

            <CheckedTextView
                android:id="@+id/item_aotumotion_but_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_aotumotion_time"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_coner_button_selector"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text=" 支持 "
                android:textColor="@color/white"
                android:textSize="12sp"
android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_action"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_aotumotion_but_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_auto_mymotionitem_delete"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:textColor="@color/white"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>