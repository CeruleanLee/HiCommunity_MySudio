<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ConstactsItem_Letter"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/Defult_Color_ShallowGrey"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="10dip">

        <TextView
            android:id="@+id/tv_villageItem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新港国际花园"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_villageItem_Detils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_villageItem_Name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_4"
            android:text="成都市双流县中和镇磨盘街上段34号"
            android:textColor="@color/Defult_Color_Grey" />

    </RelativeLayout>

    <View
        android:id="@+id/ConstactsItem_Line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/Defult_Color_LineGrey"
        android:visibility="gone" />

</LinearLayout>