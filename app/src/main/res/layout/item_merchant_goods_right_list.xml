<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_third_service_selector" >

        <ImageView
            android:id="@+id/item_merchant_goods_list_rigth_iv"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY" />
        <!-- android:background="@mipmap/ic_tupian" -->

        <TextView
            android:id="@+id/item_merchant_goods_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_merchant_goods_list_rigth_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_merchant_goods_list_rigth_iv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title name"
            android:textColor="@color/item_merch_right_title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_merchant_goods_list_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_merchant_goods_list_name_tv"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_merchant_goods_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_merchant_goods_list_rigth_iv"
            android:layout_alignLeft="@+id/item_merchant_goods_list_name_tv"
            android:text=""
            android:textColor="@color/black2"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/item_merchant_goods_list_price"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/img_select_num" >

            <TextView
                android:id="@+id/item_merchant_goods_right_sub_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/Defult_Color_LineGrey" />

            <TextView
                android:id="@+id/item_merchant_goods_list_right_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="10sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/Defult_Color_LineGrey" />

            <TextView
                android:id="@+id/item_merchant_goods_right_add_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:text="+"
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>