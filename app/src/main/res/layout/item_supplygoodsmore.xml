<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/supplygoodsmore_goodsimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_no_pic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/supplygoodsmore_goodsimg"
        android:background="@color/Defult_Color_LineGrey" />
    <TextView
        android:id="@+id/supplygoodsmore_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tv_red_shape"
        android:paddingBottom="1dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/supplygoodsmore_goodsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/supplygoodsmore_goodsimg"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="#666666"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/supplygoodsmore_goodsTitle"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/supplygoodsmore_nowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textSize="15sp"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/supplygoodsmore_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:layout_marginLeft="6dp"
            android:layout_alignBottom="@id/supplygoodsmore_nowPrice"
            android:layout_toRightOf="@id/supplygoodsmore_nowPrice"
            android:textColor="@color/old_price_color" />


        <TextView
            android:id="@+id/supplygoodsmore_saledNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
          android:layout_marginTop="4dp"
            android:layout_below="@id/supplygoodsmore_nowPrice"
            android:textColor="@color/old_price_color" />
        <ImageView
            android:id="@+id/supplygoodsmore_shopcart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_supply_cart_big" />
    </RelativeLayout>

</RelativeLayout>
