<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"

    android:paddingTop="5dp">

    <TextView
        android:id="@+id/ac_shop_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产地："
        android:textSize="13sp" />

    <TextView

        android:id="@+id/ac_shop_origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:text="中国"
        android:textSize="13sp" />
    <yyydjk.com.library.CouponView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/couponView"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ac_shop_origin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Defult_Color_LineGrey"
        android:orientation="horizontal"
        android:padding="10dp"
        app:cv_dash_line_color="@color/Defult_Color_LineGrey"
        app:cv_dash_line_gap="15dp"
        app:cv_dash_line_height="0.5dp"
        app:cv_dash_line_length="5dp"
        app:cv_dash_line_margin_bottom="5dp"
        app:cv_dash_line_margin_left="5dp"
        app:cv_dash_line_margin_right="5dp"
        app:cv_dash_line_margin_top="8dp"
        app:cv_is_dash_line_bottom="false"
        app:cv_is_dash_line_left="false"
        app:cv_is_dash_line_right="false"
        app:cv_is_dash_line_top="true"
        app:cv_is_semicircle_bottom="false"
        app:cv_is_semicircle_left="false"
        app:cv_is_semicircle_right="false"
        app:cv_is_semicircle_top="false"
        app:cv_semicircle_color="#aaaaaaaa"
        app:cv_semicircle_gap="4dp"
        app:cv_semicircle_radius="4dp">
    </yyydjk.com.library.CouponView>

</RelativeLayout>
