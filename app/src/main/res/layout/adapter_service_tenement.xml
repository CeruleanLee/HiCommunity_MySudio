<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_header_title"
    android:layout_width="match_parent"
    android:layout_height="26dip"
    android:background="@color/Defult_Color_ShallowGrey"
    android:gravity="center_vertical|left"
    android:paddingLeft="@dimen/padding_12"
    android:textSize="13sp"
    android:textColor="@color/Defult_Color_MidGrey" />
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/defult_color_white"
    android:paddingBottom="10dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_house_pic"
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_groupdetils_backgroud"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_vallage_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:background="@null"
                android:textColor="@color/defult_text_color"
                android:textSize="@dimen/font_small"
                />
                <TextView
                    android:id="@+id/tv_vallage_apartment"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/defult_text_color"
                    android:textSize="@dimen/font_small"
                    />
                </LinearLayout>
            <TextView
                android:id="@+id/tv_vallage_info"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Defult_Color_MidGrey"
                android:textSize="@dimen/font_extra_small_half"
                />
            <FrameLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tenement_type"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/bg_tenement_type"
                    android:textColor="@color/Defult_Color_MidGrey"
                    android:textSize="@dimen/font_extra_small_half"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="8dp"
                    />
                <TextView
                    android:id="@+id/tv_tenement_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:textColor="@color/color_deep_red"
                    android:textSize="@dimen/font_extra_small_half"
                    />
            </FrameLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
