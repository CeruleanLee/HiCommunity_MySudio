<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_third_service_selector"
    android:paddingLeft="@dimen/margin_8"
    android:paddingRight="@dimen/margin_8"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:id="@+id/autonamelistYWH_layout1"
        android:layout_width="match_parent"
        android:paddingRight="8dp"
        android:layout_height="wrap_content">

        <com.don.view.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_autonamelistYWH_avatar"
            style="@style/autoact_namelist_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_autonamelistYWH_avatar"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_autonamelistYWH_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_autonamelistYWH_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位：暂无"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_autonamelistYWH_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="电话："
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/autoact_line_grey_05Horizontal"
        android:visibility="gone"
        android:layout_below="@id/autonamelistYWH_layout1" />

</LinearLayout>