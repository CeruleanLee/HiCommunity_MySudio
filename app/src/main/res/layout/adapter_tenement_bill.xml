<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defult_color_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_tenementBill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_2"
            android:gravity="center"
            android:singleLine="true"
            android:text="2015年11月23日"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="@dimen/font_extra_small_half" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Defult_Color_ShallowHalfGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_tenementBill_Pic"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginBottom="@dimen/padding_4"
            android:layout_marginLeft="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_4"
            android:src="@mipmap/img_paytype_water" />


        <TextView
            android:id="@+id/tv_tenementBill_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_8"
            android:layout_toRightOf="@+id/img_goods_pic"
            android:singleLine="true"
            android:text="青椒肉丝"
            android:textColor="@color/Defult_Color_MidGrey"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>