<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defult_color_white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_12"
    android:paddingTop="@dimen/padding_12">


    <com.don.view.CircleImageView
        android:id="@+id/item_reportdetail_Image"
        style="@style/civ_avatar_size30"
        android:layout_marginLeft="@dimen/margin_12" />

    <RelativeLayout
        android:id="@+id/maincommentlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginTop="8dp"
       android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/item_reportdetail_Image"
        android:layout_marginRight="@dimen/margin_12">


        <TextView
            android:id="@+id/item_reportdetail_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Defult_Color_AppGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_reportdetail_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/item_reportdetail_Name"
            android:text=""
            android:textSize="15sp" />

    </RelativeLayout>



        <LinearLayout
            android:id="@+id/item_reportdetail_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_below="@id/maincommentlayout"
            android:layout_alignLeft="@id/maincommentlayout"
            android:background="#99F9F9F9"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_4"
            android:paddingTop="@dimen/padding_4" />

</RelativeLayout>