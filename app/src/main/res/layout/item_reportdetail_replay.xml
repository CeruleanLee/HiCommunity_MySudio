<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defult_color_white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_12"
    android:paddingTop="@dimen/padding_12">


    <com.don.view.CircleImageView
        android:id="@+id/item_reportdetail_Image"
        style="@style/civ_avatar_type2"
        android:layout_marginLeft="@dimen/margin_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12">


        <TextView
            android:id="@+id/item_reportdetail_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textColor="@color/Defult_Color_AppGreen"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_reportdetail_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/item_reportdetail_Name"
            android:text="scdggs"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_reportdetail_time"
            style="@style/tv_community_time"
            android:layout_marginTop="@dimen/padding_4"
            android:textSize="@dimen/font_extra_small"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/item_reportdetail_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_below="@id/item_reportdetail_Content"
            android:layout_alignLeft="@id/item_reportdetail_Content"
            android:background="#aaF9F9F9"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_4"
            android:paddingTop="@dimen/padding_4" />
    </RelativeLayout>
</LinearLayout>