<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:background="@drawable/bg_third_service_selector"
    android:orientation="vertical"
   >
    <FrameLayout
        android:id="@+id/fl_norm"
        android:layout_width="fill_parent"
        android:padding="12dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="订单号：D5231456521"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="@dimen/font_extra_small_half" />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:singleLine="true"
            android:text="未付款"
            android:textColor="@color/Defult_Color_AppGreen"
            android:textSize="@dimen/font_extra_small_half" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Defult_Color_ShallowHalfGrey"></View>
</LinearLayout>