<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defult_color_white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >

        <com.don.view.CircleImageView
            android:id="@+id/cimg_support_comment_head"
            style="@style/civ_avatar_type2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_toRightOf="@+id/cimg_support_comment_head"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/tv_support_comment_uerName"
                    style="@style/tv_community_reply_name"
                    android:text="陌上谁家年少" />

                <TextView
                    android:id="@+id/tv_support_comment_time"
                    style="@style/tv_community_time"
                    android:layout_gravity="right"
                    android:text="昨天 12:12" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_support_comment_content"
                style="@style/tv_community_content"
                android:layout_marginTop="@dimen/margin_12"
                android:text="我的的所发生的说东方闪电水电费水电费水电费是的是范德萨发的说法水电费水电费 " />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/Defult_Color_LineGrey"></View>
</LinearLayout>