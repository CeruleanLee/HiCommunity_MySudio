<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defult_color_white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="85dp">

                <ImageView
                    android:id="@+id/img_goods_pic"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_goods_pic"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:text="----"
                        android:textColor="@color/Defult_Color_MidGrey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="￥---"
                        android:textColor="@color/color_deep_red"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/img_select_num">

                <TextView
                    android:id="@+id/tv_goods_reduce"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/Defult_Color_MidGrey"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/Defult_Color_LineGrey" />

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/Defult_Color_MidGrey"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/Defult_Color_LineGrey" />

                <TextView
                    android:id="@+id/tv_goods_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="+"
                    android:textColor="@color/Defult_Color_MidGrey"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_huiLife_addressChooice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/defult_color_white"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_12">

                    <TextView
                        android:id="@+id/tv_reserve_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/defult_color_white"
                        android:gravity="center_vertical"
                        android:text="---"
                        android:textColor="@color/Defult_Color_MidGrey"
                        android:textSize="@dimen/font_extra_small_half" />

                    <TextView
                        android:id="@+id/tv_reserve_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="27dp"
                        android:background="@color/defult_color_white"
                        android:gravity="center_vertical"
                        android:text="----"
                        android:textColor="@color/Defult_Color_MidGrey"
                        android:textSize="@dimen/font_extra_small_half" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_12">

                    <TextView
                        android:id="@+id/tv_address_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_address_default"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="默认"
                        android:textColor="@color/defult_color_white"
                        android:textSize="@dimen/font_extra_small_half" />

                    <TextView
                        android:id="@+id/tv_reserve_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/defult_color_white"
                        android:gravity="center_vertical|left"
                        android:paddingRight="@dimen/padding_12"
                        android:singleLine="true"
                        android:text="---------"
                        android:textColor="@color/Defult_Color_Grey"
                        android:textSize="@dimen/font_extra_small_half" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="12dp"
                android:src="@mipmap/img_arrow_right"></ImageView>
        </FrameLayout>

        <TextView
            android:id="@+id/fl_huiLife_NoAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/defult_color_white"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="新建收货地址"
            android:textColor="@color/Defult_Color_MidGrey"
            android:textSize="@dimen/font_large"></TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/defult_color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="top"
            android:background="@color/Defult_Color_LineGrey"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="当前价格"
                    android:textColor="@color/Defult_Color_Grey"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_total_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:text="￥165.00"
                    android:textColor="@color/color_deep_red"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Defult_Color_AppBotton"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="14dp"
                android:text="提交订单"
                android:textColor="@color/defult_color_white"
                android:textSize="@dimen/font_extra_small_half" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>