<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_third_service_selector"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/item_aotumotion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="content"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/item_aotumotion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_aotumotion_title"

            android:layout_marginTop="12dp"
            android:text="2016/10/11"
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_aotumotion_tv_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_aotumotion_time"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="6dp"
            android:text="支持率："
            android:textColor="@color/Defult_Color_Grey"
            android:textSize="12sp"

            />

        <CheckedTextView
            android:id="@+id/item_aotumotion_but_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_aotumotion_time"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_coner_button_selector"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text=" 支持 "
            android:textColor="@color/white"
            android:textSize="12sp"

            />
    </RelativeLayout>


</RelativeLayout>