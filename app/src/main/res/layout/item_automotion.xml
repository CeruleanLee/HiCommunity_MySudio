<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_third_service_selector"
    android:paddingLeft="@dimen/margin_8"
    android:paddingRight="@dimen/margin_8"
    android:paddingTop="@dimen/margin_12">

    <TextView
        android:id="@+id/item_aotumotion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="content"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/item_aotumotion_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_aotumotion_title"

        android:layout_marginTop="12dp"
        android:text="2016/10/11"
        android:textColor="@color/Defult_Color_Grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_aotumotion_tv_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_aotumotion_time"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="6dp"
        android:text="支持率："
        android:textColor="@color/Defult_Color_Grey"
        android:textSize="10sp"

        />

    <CheckedTextView
        android:id="@+id/item_aotumotion_but_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_aotumotion_time"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_selector_but_coner_green"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:text=" 支持 "
        android:textColor="@color/white"
        android:textSize="10sp"

        />


</RelativeLayout>