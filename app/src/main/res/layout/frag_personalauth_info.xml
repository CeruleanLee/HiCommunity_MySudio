<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Defult_Color_ShallowGrey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="姓名:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入姓名"
                    android:padding="@dimen/padding_15"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="联系电话:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:padding="@dimen/padding_15"
                    android:singleLine="true"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="城市:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="right"
                    android:hint="请选择城市"
                    android:padding="@dimen/padding_15"
                    android:singleLine="true"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="区县:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_quxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="right"
                    android:hint="请选择区县"
                    android:padding="@dimen/padding_15"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="小区名:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_xiaoqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="right"
                    android:hint="请选择小区"
                    android:padding="@dimen/padding_15"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="楼栋:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:padding="@dimen/padding_15"
                    android:singleLine="true"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/Defult_Color_ShallowGrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:text="栋"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="单元:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:padding="@dimen/padding_15"
                    android:singleLine="true"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/Defult_Color_ShallowGrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_15"
                    android:text="单元"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/defult_color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="门牌号:"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:id="@+id/et_personalauth_doorNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:padding="@dimen/padding_15"
                    android:singleLine="true"
                    android:textColor="@color/color_hulf_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>