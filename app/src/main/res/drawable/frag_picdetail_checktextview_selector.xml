<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp"><shape>
                    <stroke android:width="0.5dp" android:color="@color/Defult_Color_AppGreen" />
                </shape></item>
        </layer-list></item>
        
     <item android:state_checked="false"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp"><shape>
                    <stroke android:width="0.5dp" android:color="@color/gray" />
                </shape></item>
        </layer-list></item>

</selector>